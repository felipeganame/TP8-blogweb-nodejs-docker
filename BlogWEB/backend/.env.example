# Azure Cosmos DB MongoDB Connection
MONGODB_URI=mongodb://your-cosmosdb-account:your-key@your-cosmosdb-account.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb&retrywrites=false&maxIdleTimeMS=120000

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=8080
NODE_ENV=production

# Frontend URL (Azure Web App Frontend URL)
FRONTEND_URL=https://your-frontend-app.azurewebsites.net
